{
  "name": "hoego",
  "version": "0.1.0",
  "type": "module",
  "description": "Hoego â€” AI-powered journaling and retrospective app with Dump-Feedback-Retrospect workflow",
  "scripts": {
    "dev": "tauri dev",
    "build": "node scripts/build.mjs",
    "build:tauri": "tauri build",
    "dev:vite": "vite",
    "build:vite": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,css}\"",
    "check": "npm run type-check && npm run lint && npm run format:check",
    "check:fix": "npm run type-check && npm run lint:fix && npm run format",
    "clean": "rm -rf dist build node_modules/.vite",
    "clean:all": "rm -rf dist build node_modules src-tauri/target",
    "rust:check": "cd src-tauri && cargo check",
    "rust:clippy": "cd src-tauri && cargo clippy -- -D warnings",
    "rust:fmt": "cd src-tauri && cargo fmt",
    "rust:fmt:check": "cd src-tauri && cargo fmt -- --check",
    "rust:test": "cd src-tauri && cargo test",
    "hoego:cli": "cd src-tauri && cargo run --bin hoego-cli -- cli",
    "hoego:cli:session": "cd src-tauri && cargo run --bin hoego-cli -- cli --session",
    "validate": "npm run check && npm run test:run && npm run rust:check && npm run rust:clippy",
    "prepare": "npm run check:fix"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-select": "^2.2.6",
    "@tauri-apps/api": "^1.5.4",
    "@types/react-syntax-highlighter": "^15.5.13",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "cmdk": "^0.2.1",
    "katex": "^0.16.25",
    "lucide-react": "^0.360.0",
    "mermaid": "^11.12.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.6.0",
    "react-markdown": "^9.1.0",
    "react-syntax-highlighter": "^16.1.0",
    "rehype-katex": "^7.0.1",
    "rehype-raw": "^7.0.0",
    "rehype-sanitize": "^6.0.0",
    "remark-breaks": "^4.0.0",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "tailwind-merge": "^2.2.1",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "@tauri-apps/cli": "^1.5.11",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.7.4",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "4.0.8",
    "autoprefixer": "^10.4.18",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jsdom": "^27.2.0",
    "postcss": "^8.4.35",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.5",
    "vite": "^7.2.2",
    "vitest": "^4.0.8"
  }
}
